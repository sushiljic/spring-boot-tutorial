<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ibatorConfiguration
  PUBLIC "-//Apache Software Foundation//DTD Apache iBATIS Ibator Configuration 1.0//EN"
  "http://ibatis.apache.org/dtd/ibator-config_1_0.dtd">

<ibatorConfiguration>
  <ibatorContext id="FlatJava5" targetRuntime="Ibatis2Java5" defaultModelType="flat">
    <ibatorPlugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin" />
    <ibatorPlugin type="org.mybatis.generator.plugins.SqlMapConfigPlugin" >
      <property name="targetPackage" value="com.gosmarter.it.eis.generated" />
      <property name="targetProject" value="MAVEN" />
    </ibatorPlugin>

    <jdbcConnection driverClass="org.hsqldb.jdbcDriver"
        connectionURL="jdbc:hsqldb:mem:aname"
        userId="sa" />

    <javaModelGenerator targetPackage="com.gosmarter.it.eis.generated.model" targetProject="MAVEN">
      <property name="enableSubPackages" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="com.gosmarter.it.eis.generated.xml"  targetProject="MAVEN">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

    <daoGenerator type="GENERIC-CI" targetPackage="com.gosmarter.it.eis.generated.dao"  targetProject="MAVEN">
      <property name="enableSubPackages" value="true" />
    </daoGenerator>

     <table tableName="users" >
          <generatedKey column="id" sqlStatement="select nextval('users_id_seq')" identity="true"/>
    </table>
    <table tableName="user_role" />

    <table tableName="application" >
          <generatedKey column="id" sqlStatement="select nextval('application_id_seq')" identity="true"/>
    </table>
    <table tableName="component" >
          <generatedKey column="id" sqlStatement="select nextval('component_id_seq')" identity="true"/>
    </table>
    <table tableName="component_attributes" >
          <generatedKey column="id" sqlStatement="select nextval('component_attributes_id_seq')" identity="true"/>
    </table>

  </ibatorContext>

</ibatorConfiguration>
